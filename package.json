{
  "name": "base-landing",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "prettier": "prettier .",
    "format": "pnpm run lint --fix && pnpm prettier --write .",
    "prepare": "husky",
    "fresh-install": "node scripts/fresh-install.js"
  },
  "renovate": {
    "rangeStrategy": "pin",
    "minimumReleaseAge": "30 days",
    "packageRules": [
      {
        "matchPackagePatterns": [
          ".*"
        ],
        "stabilityDays": 30
      }
    ],
    "labels": [
      "deps"
    ],
    "dependencyDashboard": true
  },
  "dependencies": {
    "@radix-ui/react-slot": "1.2.4",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.554.0",
    "next": "16.0.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "3.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@tailwindcss/postcss": "4.1.17",
    "@types/node": "24.10.1",
    "@types/react": "19.2.6",
    "@types/react-dom": "19.2.3",
    "eslint": "9.39.1",
    "eslint-config-next": "16.0.3",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "husky": "9.1.7",
    "prettier": "3.6.2",
    "tailwindcss": "4.1.17",
    "tw-animate-css": "1.4.0",
    "typescript": "5.9.3"
  }
}
